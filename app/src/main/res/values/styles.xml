<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PinkTheme" parent="AppTheme">
        <item name="colorPrimary">?themeColorPrimary</item>
        <item name="colorPrimaryDark">?themeColorPrimary</item>
        <item name="colorAccent">?themeColorPrimary</item>
        <item name="themeColorPrimary">@color/pink</item>
    </style>

    <style name="LightGreenTheme" parent="AppTheme">
        <item name="colorPrimary">?themeColorPrimary</item>
        <item name="colorPrimaryDark">?themeColorPrimary</item>
        <item name="colorAccent">@color/light_green</item>
        <item name="themeColorPrimary">@color/light_green</item>
    </style>

</resources>
